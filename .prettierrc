{
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": ["*.yaml", ".github/**/*.yaml", "**/.*.yaml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "singleQuote": false,
                "requirePragma": true,
                "tabWidth": 4
            }
        },
        {
            "files": "*.md",
            "options": {
                "singleQuote": false,
                "requirePragma": true,
                "tabWidth": 2
            }
        }
    ]
}
